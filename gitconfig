[init]
  templatedir = ~/.git_template
[push]
  default = upstream
[pull]
  rebase = true
[color]
  ui = auto
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit 
  co = checkout
  lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
  st = status
  please = push --force-with-lease
  up = pull --rebase --autostash
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim
[merge]
  ff = only
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[rerere]
  autoupdate = true
  enabled = true
[cola]
  spellcheck = false

[user]
	name = stemlaur
	email = stemlaur2@gmail.com
